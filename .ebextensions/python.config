packages:
  yum:
    libjpeg-turbo-devel: []
    libpng-devel: []
    freetype-devel: []

container_commands:
  01_uninstall_pil:
    command: "source /opt/python/run/venv/bin/activate && yes | pip uninstall Pillow"
    leader_only: true
  02_reinstall_pil:
    command: "source /opt/python/run/venv/bin/activate && yes | pip install Pillow --no-cache-dir"
    leader_only: true
  03_install_easy_thumbnail:
    comand: "/opt/python/run/venv/bin/pip install easy-thumbnails==2.4.1 django-image-cropping==1.0.4"
    leader_only: true
  04_migrate:
    command: "python manage.py migrate"
    leader_only: true
  05_collectstatic:
    command: "python manage.py collectstatic --noinput"

option_settings:
  aws:elasticbeanstalk:application:environment:
    DJANGO_SETTINGS_MODULE: ""
  aws:elasticbeanstalk:container:python:
    WSGIPath: tikedge/wsgi.py
    StaticFiles: "/static/=www/static/"